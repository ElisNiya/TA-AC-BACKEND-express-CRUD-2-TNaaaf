<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% include partials/header %>
    <div class="xl:container bg-white p-4">
        <h1 class="text-gray-500 text-center m-3">All Articles</h1>
        <% if(articles.length) { %>
        
        <% articles.forEach( a => {
            %>
            <section class="container mx-auto p-2">
                <div class="mb-3">
                    <a href="/articles/<%= a.id %>">
                    <h2 class="text-blue-400"><% = a.title %></h2></a>
                </div>
            </section>
            <%
        })
        %>
        <% 
            } else{
        %>
        <h2 class="text-blue-500 text-center">No Articles Present</h2>
        <% } %>
    </div>

    <% include partials/footer %>
</body>
</html>
